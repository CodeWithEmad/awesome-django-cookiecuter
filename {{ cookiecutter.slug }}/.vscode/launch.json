{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Attach Debugger",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/app/"
                }
            ],
            "justMyCode": true,
            "django": true
        },
        {
            "name": "Celery: Attach Debugger",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 6789
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/backend",
                    "remoteRoot": "/app/"
                }
            ],
            "justMyCode": true,
            "django": true
        }
    ]
}